<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0" xmlns:camel="http://camel.apache.org/schema/blueprint"
  xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:cxf="http://camel.apache.org/schema/blueprint/cxf">

  <!-- The bean to register PID with OSGi Config Admin service and define the default values for the PID properties -->
  <cm:property-placeholder persistent-id="pmp.routes.inbound.fulfillment.order.ws" update-strategy="reload">
    <cm:default-properties>
      <cm:property name="cxfOrderEndpoint" value="cxf:bean:orderEndpoint" />
    </cm:default-properties>
  </cm:property-placeholder>

  <cxf:cxfEndpoint id="transactionEndpoint" address="/transaction/" serviceClass="com.elavon.fuse.examples.cxf_to_amq.TransactionService">
    <cxf:properties>
      <entry key="dataFormat" value="POJO" />
    </cxf:properties>
  </cxf:cxfEndpoint>

  <!-- RouteBuilder bean declarations -->
  <bean id="cxfRouteBuilder" class="com.elavon.fuse.examples.cxf_to_amq.CxfToAmqRouteBuilder" />

  <camelContext id="inbound-transaction-ws" xmlns="http://camel.apache.org/schema/blueprint" trace="true">
    <camel:routeBuilder ref="cxfRouteBuilder" />
  </camelContext>

</blueprint>
